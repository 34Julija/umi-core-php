{
    "name": "umi-top/umi-core-php",
    "description": "UMI Core PHP Library",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Umi Dev",
            "email": "dev@umi.top"
        }
    ],
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "UmiTop\\UmiCore\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "UmiTop\\UmiCore\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=7.0",
        "bitwasp/bech32": "^0.0.1",
        "ext-sodium": "*",
        "ext-gmp": "*"
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit --testdox",
        "psalm": "psalm --no-cache --show-info=true",
        "phpstan": "phpstan analyse --level max src tests",
        "phpcs": "phpcs --standard=PSR12 src tests",
        "lint": ["@phpcs", "@psalm", "@phpstan"]
    }
}
